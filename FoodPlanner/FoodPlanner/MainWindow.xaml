<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UserControls="clr-namespace:FoodPlanner.UserControls"
    mc:Ignorable="d" x:Class="FoodPlanner.MainWindow"
    Title="Meal Planner"
    d:DesignHeight="720"
    d:DesingHeightWidth="405"
    ResizeMode="NoResize"
    WindowStyle="ToolWindow"
    WindowStartupLocation="CenterScreen"
    Height="720"
    Width="405"
    Background="{StaticResource BackgroundColour}"
    Cursor="Hand">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Frame x:Name="Frame" Grid.Row="0" NavigationUIVisibility="Hidden"/>
        <UserControls:NavigationBar Grid.Row="1"/>
    </Grid>
</Window>