<Window x:Class="FoodPlanner.RecommendedRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecommendedRecipesWindow" Height="400" Width="600">
    <Grid>
        <DataGrid x:Name="recommendedRecipesDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" 
                      Margin="5" RowDetailsVisibilityMode="VisibleWhenSelected" SelectionChanged="recommendedRecipesDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Recipe.ID}" Header="ID" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn x:Name="recipeColumn" Binding="{Binding Recipe}" Header="Recipe" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn x:Name="matchPercentageColumn" Binding="{Binding MatchPercentage, StringFormat=P2}" Header="Match Percentage" IsReadOnly="True" Width="Auto"/>
           </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
