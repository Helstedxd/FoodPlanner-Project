<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModels="clr-namespace:FoodPlanner.ViewModels"
    xmlns:local="clr-namespace:FoodPlanner"
	x:Class="FoodPlanner.Views.MealPlanPage"
    mc:Ignorable="d"
	FlowDirection="LeftToRight"
    d:DesignHeight="720" d:DesignWidth="405"
    Title="MealPlan">
    <Page.Resources>
        <!--TODO: could this be moved to the MealsListBoxTemplate -->
        <Style TargetType="ListBoxItem">
            <Setter Property="VerticalContentAlignment" Value="Stretch"></Setter>
        </Style>        
    </Page.Resources>
    <Page.DataContext>
        <ViewModels:MealPlanViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Command="{Binding PreviousWeekCommand}" Grid.Row="0" Style="{StaticResource ButtonIconTemplate}">
            <Button.Background>
                <ImageBrush ImageSource="/Images/upArrowIcon.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Label Content="{Binding Path=MondayString, Mode=OneWay}" Grid.Row="1" Style="{StaticResource TextLabelTemplate}"/>
        <Label Content="{Binding Path=TuesdayString, Mode=OneWay}" Grid.Row="2" Style="{StaticResource TextLabelTemplate}"/>
        <Label Content="{Binding Path=WednesdayString, Mode=OneWay}" Grid.Row="3" Style="{StaticResource TextLabelTemplate}"/>
        <Label Content="{Binding Path=ThursdayString, Mode=OneWay}" Grid.Row="4" Style="{StaticResource TextLabelTemplate}"/>
        <Label Content="{Binding Path=FridayString, Mode=OneWay}" Grid.Row="5" Style="{StaticResource TextLabelTemplate}"/>
        <Label Content="{Binding Path=SaturdayString, Mode=OneWay}" Grid.Row="6" Style="{StaticResource TextLabelTemplate}"/>
        <Label Content="{Binding Path=SundayString, Mode=OneWay}" Grid.Row="7" Style="{StaticResource TextLabelTemplate}"/>
        <Button Command="{Binding NextWeekCommand}" Content="\/" Grid.Row="8" Style="{StaticResource ButtonIconTemplate}">
            <Button.Background>
                <ImageBrush ImageSource="/Images/downArrowIcon.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Label Style="{StaticResource TextTitle}" VerticalAlignment="Center" FontSize="30" Content="{Binding Path=WeekString}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center"/>

        <ListBox x:Name="MondayMealsListBox" Grid.Row="1" Grid.Column="1" ItemsPanel="{StaticResource WrapPanelHorizontalTemplate}" ItemsSource="{Binding MondayMeals}" ItemTemplate="{StaticResource MealsListBoxTemplate}" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
        <ListBox x:Name="TuesdayMealsListBox" Grid.Row="2" Grid.Column="1" ItemsPanel="{StaticResource WrapPanelHorizontalTemplate}" ItemsSource="{Binding TuesdayMeals}" ItemTemplate="{StaticResource MealsListBoxTemplate}"/>
        <ListBox x:Name="WednesdayMealsListBox" Grid.Row="3" Grid.Column="1" ItemsPanel="{StaticResource WrapPanelHorizontalTemplate}" ItemsSource="{Binding WednesdayMeals}" ItemTemplate="{StaticResource MealsListBoxTemplate}" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
        <ListBox x:Name="ThursdayMealsListBox" Grid.Row="4" Grid.Column="1" ItemsPanel="{StaticResource WrapPanelHorizontalTemplate}" ItemsSource="{Binding ThursdayMeals}" ItemTemplate="{StaticResource MealsListBoxTemplate}" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
        <ListBox x:Name="FridayMealsListBox" Grid.Row="5" Grid.Column="1" ItemsPanel="{StaticResource WrapPanelHorizontalTemplate}" ItemsSource="{Binding FridayMeals}" ItemTemplate="{StaticResource MealsListBoxTemplate}" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
        <ListBox x:Name="SaturdayMealsListBox" Grid.Row="6" Grid.Column="1" ItemsPanel="{StaticResource WrapPanelHorizontalTemplate}" ItemsSource="{Binding SaturdayMeals}" ItemTemplate="{StaticResource MealsListBoxTemplate}" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
        <ListBox x:Name="SundayMealsListBox" Grid.Row="7" Grid.Column="1" ItemsPanel="{StaticResource WrapPanelHorizontalTemplate}" ItemsSource="{Binding SundayMeals}" ItemTemplate="{StaticResource MealsListBoxTemplate}" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>

    </Grid>
</Page>