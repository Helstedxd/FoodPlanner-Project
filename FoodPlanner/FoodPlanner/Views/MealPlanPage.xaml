<Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModels="clr-namespace:FoodPlanner.ViewModels"
	x:Class="FoodPlanner.MealPlanPage"
    mc:Ignorable="d"
	FlowDirection="LeftToRight"
    d:DesignHeight="720" d:DesignWidth="405"
    Title="MealPlan">

    <Page.DataContext>
        <ViewModels:FoodPlanViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Command="{Binding GoAWeekDownCommand}" Grid.Row="0" Style="{DynamicResource ButtonIconTemplate}">
            <Button.Background>
                <ImageBrush ImageSource="/Images/upArrowIcon.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button Content="{Binding Path=MondayString, Mode=OneWay}" Grid.Row="1" Style="{DynamicResource ButtonTextTemplate}"/>
        <Button Content="{Binding Path=TuesdayString, Mode=OneWay}" Grid.Row="2" Style="{DynamicResource ButtonTextTemplate}"/>
        <Button Content="{Binding Path=WednesdayString, Mode=OneWay}" Grid.Row="3" Style="{DynamicResource ButtonTextTemplate}"/>
        <Button Content="{Binding Path=ThursdayString, Mode=OneWay}" Grid.Row="4" Style="{DynamicResource ButtonTextTemplate}"/>
        <Button Content="{Binding Path=FridayString, Mode=OneWay}" Grid.Row="5" Style="{DynamicResource ButtonTextTemplate}"/>
        <Button Content="{Binding Path=SaturdayString, Mode=OneWay}" Grid.Row="6" Style="{DynamicResource ButtonTextTemplate}"/>
        <Button Content="{Binding Path=SundayString, Mode=OneWay}" Grid.Row="7" Style="{DynamicResource ButtonTextTemplate}"/>
        <Button Command="{Binding GoAWeekUpCommand}" Content="\/" Grid.Row="8" Style="{DynamicResource ButtonIconTemplate}">
            <Button.Background>
                <ImageBrush ImageSource="/Images/downArrowIcon.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <TextBlock Text="{Binding Path=WeekString, Mode=OneWay}"  TextWrapping="Wrap" Grid.Row="0" Grid.Column="1" FontSize="48" TextAlignment="Center"/>
        <ListBox Grid.Row="1" Grid.RowSpan="8" Grid.ColumnSpan="2" Margin="78,-2,2,2"/>

        <ListBox x:Name="MondayMealsListBox" Grid.Row="1" Grid.Column="1" ItemsSource="{Binding MondayMeals, Mode=OneWay}" ItemTemplate="{StaticResource MealsListBoxTemplate}"/>
        <ListBox x:Name="TuesdayMealsListBox" Grid.Row="2" Grid.Column="1" ItemsSource="{Binding TuesdayMeals, Mode=OneWay}" ItemTemplate="{StaticResource MealsListBoxTemplate}"/>
        <ListBox x:Name="WednesdayMealsListBox" Grid.Row="3" Grid.Column="1" ItemsSource="{Binding WednesdayMeals, Mode=OneWay}" ItemTemplate="{StaticResource MealsListBoxTemplate}"/>
        <ListBox x:Name="ThursdayMealsListBox" Grid.Row="4" Grid.Column="1" ItemsSource="{Binding ThursdayMeals, Mode=OneWay}" ItemTemplate="{StaticResource MealsListBoxTemplate}"/>
        <ListBox x:Name="FridayMealsListBox" Grid.Row="5" Grid.Column="1" ItemsSource="{Binding FridayMeals, Mode=OneWay}" ItemTemplate="{StaticResource MealsListBoxTemplate}"/>
        <ListBox x:Name="SaturdayMealsListBox" Grid.Row="6" Grid.Column="1" ItemsSource="{Binding SaturdyMeals, Mode=OneWay}" ItemTemplate="{StaticResource MealsListBoxTemplate}"/>
        <ListBox x:Name="SundayMealsListBox" Grid.Row="7" Grid.Column="1" ItemsSource="{Binding SundayMeals, Mode=OneWay}" ItemTemplate="{StaticResource MealsListBoxTemplate}"/>
        
    </Grid>
</Page>