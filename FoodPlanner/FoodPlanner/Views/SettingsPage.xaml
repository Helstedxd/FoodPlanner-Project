<Page x:Class="FoodPlanner.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ViewModels="clr-namespace:FoodPlanner.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="405"
	Title="SettingsPage">
    <Page.DataContext>
        <ViewModels:SettingsViewModel/>
    </Page.DataContext>

    <Grid>
        <ListBox>
            <Expander Header="User speficics" DataContext="{Binding Path=CurrentUser}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Persons in the household:" Padding="0,5,5,5"/>
                    <TextBlock Text="{Binding PersonsInHouseHold}" Grid.Column="1" Padding="5"/>
                    <Button Content="Plus" Grid.Column="3" Padding="5"/>
                    <Button Content="Minus" Grid.Column="2" Padding="5"/>
                    
                    <TextBlock Text="Number of days to shop for:" Grid.Row="1" Padding="0,5,5,5"/>
                    <TextBlock Text="{Binding ShopAhead}" Grid.Row="1" Grid.Column="1" Padding="5"/>
                    <Button Content="Plus" Grid.Column="3" Grid.Row="1" Padding="5"/>
                    <Button Content="Minus" Grid.Column="2" Grid.Row="1" Padding="5"/>

                    <TextBlock Text="Start up screen" Grid.Row="2" Padding="0,5,5,5"/>
                    <ComboBox Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"/>
                    
                    <Button Content="Save changes" Grid.Row="3" Grid.Column="4"/>
                </Grid>
            </Expander>
            <Expander Header="Stock management" DataContext="{Binding Path=CurrentUser}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>


                    <TextBlock Text="Stock List" Grid.Column="1" FontSize="14" TextDecorations="Underline"/>
                    <ListView Grid.Row="1" Grid.ColumnSpan="3" ItemsSource="{Binding StockQuantities}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="Name" CellTemplate="{StaticResource ShoppingListNameCell}"/>
                                <GridViewColumn Width="Auto" Header="Quantity And Unit" CellTemplate="{StaticResource ShoppingListUnitAndQuantityCell}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Content="Remove Ingredient" Grid.Row="2"/>

                    <TextBlock Text="Add a new stock ingredient" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" FontSize="14" TextDecorations="Underline"/>
                    <TextBlock Text="Name" Grid.Row="4"/>
                    <TextBlock Text="Quantity" Grid.Row="4" Grid.Column="1"/>
                    <TextBlock Text="Unit" Grid.Row="4" Grid.Column="2"/>
                    <TextBox Text="{Binding SearchText, Mode=TwoWay, Delay=500, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5"/>
                    <ListBox Grid.Row="6" ItemsSource="{Binding FoundIngredients}" SelectedItem="{Binding SelectedIngredient}" Visibility="{Binding AutoCompleteListVisibility}">
                        <!--<i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseUp">
                                <i:InvokeCommandAction Command="{Binding AddIngredientToInventoryCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>-->
                    </ListBox>

                    <TextBox Grid.Row="5" Grid.Column="1"/>
                    <ComboBox Grid.Row="5" Grid.Column="2"/>
                    <Button Grid.Row="6" Content="Add Ingredient" Grid.Column="3"/>
                </Grid>
            </Expander>
            <Expander Header="Favorite ingredients" DataContext="{Binding Path=CurrentUser}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Text="{Binding SearchText, Mode=TwoWay, Delay=500, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2"/>
                    <ListBox ItemsSource="{Binding FoundIngredients}" SelectedItem="{Binding SelectedIngredient}" Visibility="{Binding AutoCompleteListVisibility}" Grid.Row="1" Grid.ColumnSpan="2">
                        <!--<i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseUp">
                                <i:InvokeCommandAction Command="{Binding AddIngredientToInventoryCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>-->
                    </ListBox>

                    <TextBlock Text="Favorite ingredients list" FontSize="14" TextDecorations="Underline" Grid.Row="2" Grid.ColumnSpan="2"/>
                    <ListBox ItemsSource="{Binding Path=GraylistIngredients}" Grid.Row="3" Grid.ColumnSpan="2">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Ingredient.Name}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Button Content="Remove" Grid.Row="4" Grid.Column="1"/>
                </Grid>
            </Expander>
            <Expander Header="Unwanted ingredients" DataContext="{Binding Path=CurrentUser}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Text="{Binding SearchText, Mode=TwoWay, Delay=500, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2"/>
                    <ListBox ItemsSource="{Binding FoundIngredients}" SelectedItem="{Binding SelectedIngredient}" Visibility="{Binding AutoCompleteListVisibility}" Grid.Row="1" Grid.ColumnSpan="2">
                        <!--<i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseUp">
                                <i:InvokeCommandAction Command="{Binding AddIngredientToInventoryCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>-->
                    </ListBox>

                    <TextBlock Text="Favorite ingredients list" FontSize="14" TextDecorations="Underline" Grid.Row="2" Grid.ColumnSpan="2"/>
                    <ListBox ItemsSource="{Binding Path=GraylistIngredients}" Grid.Row="3" Grid.ColumnSpan="2">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Ingredient.Name}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Content="Remove" Grid.Row="4" Grid.Column="1"/>
                </Grid>
            </Expander>
        </ListBox>
    </Grid>
</Page>
