<Page x:Class="FoodPlanner.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ViewModels="clr-namespace:FoodPlanner.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="405"
	Title="SettingsPage">
    <Page.DataContext>
        <ViewModels:SettingsViewModel/>
    </Page.DataContext>

    <Grid>
        <ListBox>
            <Expander Header="User speficics" DataContext="{Binding Path=CurrentUser}" ContentTemplate="{StaticResource UserSettingsDataTemplate}"/>
            <Expander Header="Stock management" DataContext="{Binding Path=CurrentUser}" ContentTemplate="{StaticResource StockSettingsDataTemplate}"/>
            <Expander Header="Favorite ingredients" DataContext="{Binding Path=CurrentUser}" ContentTemplate="{StaticResource FavoritIngredientDataTemplate}"/>
            <Expander Header="Unwanted ingredients" DataContext="{Binding Path=CurrentUser}" ContentTemplate="{StaticResource UnwantedIngredientsDataTemplate}"/>
        </ListBox>
    </Grid>
</Page>
